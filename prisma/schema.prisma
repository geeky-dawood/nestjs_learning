generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum SigninResponseEnum {
  PASSWORD_MATCHES
  INVALID_PASSWORD
}

model User {
  id              String    @id @default(uuid())
  name            String
  email           String    @unique
  dob             DateTime?
  password        String
  profile_picture String?
  is_Deleted      Boolean   @default(false)
  is_Verified     Boolean   @default(false)

  wrong_attempts Int       @default(0)
  is_Locked      Boolean   @default(false)
  lock_until     DateTime?

  address  Address[]
  attempts LoginAttempts[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model LoginAttempts {
  id              String             @id @default(uuid())
  reason          SigninResponseEnum
  attempt_success Boolean            @default(false)

  user_id String
  user    User   @relation(fields: [user_id], references: [id])

  createAt  DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("loginAttempts")
}

model Address {
  id             String  @id @default(uuid())
  latitude       Float
  longitude      Float
  country        String
  city           String
  state          String
  zip_code       String
  address        String
  address_line_1 String?
  address_line_2 String?
  tag            String?

  is_Deleted  Boolean @default(false)
  is_Verified Boolean @default(false)

  user_id String
  user    User   @relation(fields: [user_id], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("address")
}
